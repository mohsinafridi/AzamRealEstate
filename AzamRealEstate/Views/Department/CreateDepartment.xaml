<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AzamRealEstate.Views.Department.CreateDepartment"
             Title="CreateDepartment">

    <StackLayout Margin="10">
        <VerticalStackLayout>
            <Label Text="Name" FontSize="16"/>
            <Entry Text="{Binding departmentObj.Name}" Placeholder="Department Name"/>
        </VerticalStackLayout>

        
        <Button 
            Command="{Binding AddNewDepartmentCommand}" 
            Text="Add Department"/>
        
    </StackLayout>

</ContentPage>