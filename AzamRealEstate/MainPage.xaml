<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AzamRealEstate.MainPage">

    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <!-- Your menu items go here -->
            <StackLayout>
                <Label Text="Home" />
                <Label Text="Profile" />
                <Label Text="Settings" />
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage>
                    <!-- Your main content goes here -->
                    <Label Text="Welcome to the App!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
    </FlyoutPage>

</ContentPage>
